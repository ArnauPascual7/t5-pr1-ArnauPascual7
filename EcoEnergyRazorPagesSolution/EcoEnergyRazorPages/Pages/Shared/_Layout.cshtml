<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EcoEnergyRazorPages</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EcoEnergyRazorPages.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container" style="margin-bottom: -10px">
                <a class="navbar-brand" asp-area="" asp-page="/Index">
                    <img src="~/images/logo.jpg" alt="logo" width="50" height="50" class="d-inline-block" />
                    EcoEnergy Solutions
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 nav-underline" style="margin-top: 20px">
                        <li class="nav-item">
                            @if (ViewContext.RouteData.Values["page"]?.ToString() == "/Index")
                            {
                                <a class="nav-link text-white active" aria-current="page" asp-area="" asp-page="/Index">Inici</a>
                            }
                            else
                            {
                                <a class="nav-link text-white" asp-area="" asp-page="/Index">Inici</a>
                            })
                        </li>
                        <li class="nav-item">
                            @if (ViewContext.RouteData.Values["controller"]?.ToString() == "DbSimulations")
                            {
                                <a class="nav-link text-white active" asp-controller="/DbSimulations">Simulacions</a>
                            }
                            else
                            {
                                <a class="nav-link text-white" asp-controller="/DbSimulations">Simulacions</a>
                            })
                        </li>
                        <li class="nav-item">
                            @if (ViewContext.RouteData.Values["page"]?.ToString() == "/WaterConsumption")
                            {
                                <a class="nav-link text-white active" aria-current="page" asp-area="" asp-page="/WaterConsumption">Consum d'aigua</a>
                            }
                            else
                            {
                                <a class="nav-link text-white" asp-area="" asp-page="/WaterConsumption">Consum d'aigua</a>
                            }
                        </li>
                        <li class="nav-item">
                            @if (ViewContext.RouteData.Values["page"]?.ToString() == "/EnergyIndicators")
                            {
                                <a class="nav-link text-white active" aria-current="page" asp-area="" asp-page="/EnergyIndicators">Indicadors d'energia</a>
                            }
                            else
                            {
                                <a class="nav-link text-white" asp-area="" asp-page="/EnergyIndicators">Indicadors d'energia</a>
                            }
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted navbar-dark bg-dark">
        <div class="container text-center text-white">
            Desenvolupat per <strong>ArnauPascual</strong> | DAMv1 2025
            @*&copy; 2025 - EcoEnergyRazorPages - <a asp-area="" asp-page="/Privacy">Privacy</a>*@
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
